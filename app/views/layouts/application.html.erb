<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    "scaffold", 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    "depot", :media => 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults, 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <div id="cart">
            <%= render @cart %>
          </div>
        <% end %>
      <% end %>
      <br/>
      <%= link_to 'Home', store_path %></br>
      <a href="#/faq">Questions</a><br/>
      <a href="#/news">News</a><br/>
      <a href="http://gemilleford.com/contact/">Contact</a><br/>
      <br/><%= Time.now %><br/>
      <% if session[:user_id] %>
      <br/>
      <%= link_to 'Orders',   orders_path   %> <br/>
      <%= link_to 'Products', products_path %><br/>
      <%= link_to 'Users',    users_path    %><br/>
      <br/>
      <%= button_to 'Logout', logout_path, :method => :delete %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
